<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CaiDatActivity">


    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="TÀI KHOẢN"
        android:gravity="left|center"
        android:textColor="#08BC02"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAcount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_acount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Ac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_color"
                android:text="Vòng lặp lại"
                android:textAllCaps="false"
                android:paddingLeft="30dp"
                android:gravity="bottom|left|center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_Ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="22dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="BÀI TẬP"
        android:gravity="left|center"
        android:textColor="#08BC02"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgReplay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_replay" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_DialogNumberPicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_color"
                android:text="Vòng lặp lại"
                android:textAllCaps="false"
                android:paddingLeft="30dp"
                android:gravity="bottom|left|center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_time" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:id="@+id/btn_DialogTimePicker1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_color"
            android:text="Thời gian mỗi bài tập"
            android:textAllCaps="false"
            android:paddingLeft="30dp"
            android:gravity="bottom|left|center"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt_Time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSafe"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_safe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_DialogTimePicker2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_color"
                android:text="Đặt nghỉ ngơi"
                android:textAllCaps="false"
                android:paddingLeft="30dp"
                android:gravity="bottom|left|center"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txt_Time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_countdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_DialogTimePicker3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_color"
                android:text="Thời gian đếm ngược"
                android:textAllCaps="false"
                android:paddingLeft="30dp"
                android:gravity="bottom|left|center"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txt_Time3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgVolume"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_volume" />

        <Switch
            android:id="@+id/switch_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:shadowColor="#FFFFFF"
            android:switchMinWidth="50dp"
            android:text="Âm thanh"
            android:textAllCaps="false"
            android:textColor="#373636"
            android:textSize="20dp"
            android:textStyle="bold"
            android:thumb="@drawable/button_color" />

    </LinearLayout>
</LinearLayout>