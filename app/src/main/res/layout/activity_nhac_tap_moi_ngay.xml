<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NhacTapMoiNgay">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgClock"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_clock" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_timepickernhacnho"
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_color"
                    android:gravity="center_vertical"
                    android:text="Thời gian"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/txt_timepickernhacnho"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textSize="20dp"
                    android:textColor="#F2913D"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCalendar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_datepickernhacnho"
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_color"
                    android:gravity="center_vertical"
                    android:text="Ngày tháng"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/txt_datepickernhacnho"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textSize="20dp"
                    android:textColor="#F2913D"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>